<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <PreFlow name="PreFlow">
        <Request/>
        <Response/>
    </PreFlow>
    <Flows>
        <Flow name="stockInfo">
            <Description>retrieve stock info</Description>
            <Request>
                <Step>
                    <Name>stock-info-extract-params</Name>
                </Step>
                <Step>
                    <Name>stock-info-target-path-and-params</Name>
                </Step>
            </Request>
            <Response>
                <Step>
                    <Name>stock-info-transform-response</Name>
                    <Condition>response.status.code = 200</Condition>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/stocks/*/info") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="stocksInIndex">
            <Description>retrieve stocks for index</Description>
            <Request>
                <Step>
                    <Name>index-stocks-extract-params</Name>
                </Step>
                <Step>
                    <Name>index-stocks-default-values</Name>
                </Step>
                <Step>
                    <Name>index-stocks-target-path-and-payload</Name>
                </Step>
            </Request>
            <Response>
                <Step>
                    <Name>index-stocks-transform-response</Name>
                    <Condition>response.status.code = 200</Condition>
                </Step>
            </Response>
            <!-- 
                The condition should be:
                <Condition>(proxy.pathsuffix MatchesPath "/index/*/stocks") and (request.verb = "GET")</Condition>
                but then the response flow is not executed.
                https://community.apigee.com/questions/85430/changing-requestverb-breaks-flow.html
            -->
            <Condition>(proxy.pathsuffix MatchesPath "/index/*/stocks")</Condition>
        </Flow>
        <Flow name="priceHistory">
            <Description>retrieve price history for stock</Description>
            <Request>
                <Step>
                    <Name>price-history-extract-params</Name>
                </Step>
                <Step>
                    <Name>price-history-default-values</Name>
                </Step>
                <Step>
                    <Name>price-history-target-path-and-params</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/stocks/*/prices") and (request.verb = "GET")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPProxyConnection>
        <BasePath>/boerse-frankfurt-de/v1/</BasePath>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>